rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Detections - Anyone can write (for demo/hackathon)
    // In production, add authentication
    match /detections/{detectionId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Stats - Anyone can read/write
    match /stats/{document=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // Detection log
    match /detectionLog/{logId} {
      allow read: if true;
      allow write: if true;
    }
  }
}